    "version": "0.2.0",
    "configurations": [

        {
            "name": "Source",
            "type": "f5anything",
            "request": "launch",
            "command": "love ${workspaceFolder}/SRC", // Could be any other shell command
            "preLaunchTask": "Close all instances" // The name of the task defined above
        },
        {
            "name": ".love file",
            "type": "f5anything",
            "request": "launch",
            "preLaunchTask": "Close and Build", // The name of the task defined above
            "command": "love ${workspaceFolder}/BUILD/game.love", // Could be any other shell command
        },
        {
            "name": "WinBuild",
            "type": "f5anything",
            "request": "launch",
            "preLaunchTask": "Build all", // The name of the task defined above
            "command": "wine ${workspaceFolder}/BUILD/Win/SuperGame.exe", // Could be any other shell command
        },
        // {
        //     "name": "Lua CurrentFile",
        //     "type": "lua",
        //     "request": "launch",
        //     // "preLaunchTask": "Build all", // The name of the task defined above
        //     // "command": "wine ${workspaceFolder}/BUILD/Win/SuperGame.exe", // Could be any other shell command
        // },
        {
            "name": "lua CurrentFile",
            "type": "lua",
            "request": "launch",
            "program": "${file}",
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}/SRC/",
            // "purpose":["debug-in-terminal"],
            "path": "${workspaceFolder}/SRC/?.lua",
            "stopOnThreadEntry": false,
        }

    ]
}